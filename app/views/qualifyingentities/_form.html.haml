= simple_form_for resource do |f|
  %div.errors
    = f.error_notification
  = f.input :name
  //= f.association :classroom  
  = f.association :contentblocks, collection: contentblocks_options(current_teacher), label_method: :full_name, input_html: {class: 'span6'}
  = f.button :submit, :class => 'btn-primary'
  = link_to t(:cancel), collection_path, :class => 'btn'
