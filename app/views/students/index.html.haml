- content_for :title, Student.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= sort_link @q, :name, Student.human_attribute_name(:name)
      %th= sort_link @q, :dni, Student.human_attribute_name(:dni)
      %th= t(:actions)
  %tbody
    - collection.each do |item|
      %tr
        %td= item.try(:name)
        %td= item.try(:dni)
        %td
          - if can? :edit, item
            = link_to t(:edit), edit_resource_path(item), :class => 'ui-icon ui-icon-pencil'
          - if can? :destroy, item
            = link_to t(:destroy), resource_path(item), :data => {:confirm => t(:are_you_sure?)}, :method => :delete, :class => 'ui-icon ui-icon-trash'
- if can? :create, Student
  = link_to t(:new), new_resource_path, :class => 'btn btn-primary'

= paginate collection
