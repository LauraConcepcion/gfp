- model_class = Institute
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @institute.name
%p
  %strong= model_class.human_attribute_name(:address) + ':'
  %br
  = @institute.address
%p
  %strong= model_class.human_attribute_name(:aacce_id) + ':'
  %br
  = @institute.aacce_id
%p
  %strong= model_class.human_attribute_name(:phone) + ':'
  %br
  = @institute.phone
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @institute.email
%p
  %strong= model_class.human_attribute_name(:web) + ':'
  %br
  = @institute.web

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), institutes_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_institute_path(@institute), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), institute_path(@institute), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
