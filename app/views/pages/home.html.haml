%h1= t(:wellcome, :user => current_teacher.full_name)
.menu_icon
  %h3= t(:profiles)
  = link_to image_tag("configuracion.png", :border => 0), {:action => 'index', :controller => 'profiles'}
.menu_icon
  %h3= t(:students)
  - classroom = current_teacher.try(:current_profile).try(:classroom)
  -if classroom
    = link_to image_tag("student1.jpg", :border => 0), classroom_students_path(classroom)
  -else
    = t(:no_classroom)
.menu_icon
  %h3= t(:scores)
  = link_to image_tag("book.png", :border => 0), edit_scores_profile_path(current_teacher.current_profile) if current_teacher.current_profile
