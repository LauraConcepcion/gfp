= simple_form_for [@teacher, @profile], :html => { :class => 'form-horizontal' } do |f|
  = f.association :institute, :input_html => {:class => 'chzn-select'}
  = f.association :trainercycle, :input_html => {:class => 'chzn-select'}
  - matters = @profile.trainercycle.try(:matters) || []
  = f.association :matter, :collection => matters, :input_html => {:class => 'chzn-select'}
  = f.association :group, :input_html => {:class => 'chzn-select'}
  = f.input :created_at do
    = l(resource.created_at, :format => :medium)
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), teacher_profiles_path, :class => 'btn'
